# ============================================
# ChatOps Docker Environment
# ============================================

# PostgreSQL
POSTGRES_DB=chatops
POSTGRES_USER=chatops_user
POSTGRES_PASSWORD=chatops_pass
POSTGRES_READONLY_PASS=readonly_pass

# ============================================
# LLM Provider Settings
# ============================================
# 사용할 LLM 제공자 선택: openai 또는 anthropic
LLM_PROVIDER=openai

# OpenAI API (LLM_PROVIDER=openai 선택 시 필수)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API (LLM_PROVIDER=anthropic 선택 시 필수)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# LLM 모델 설정
# OpenAI: gpt-4o-mini (권장, 저렴), gpt-4o (고성능)
# Anthropic: claude-3-5-haiku-latest (권장, 저렴), claude-sonnet-4-20250514 (균형)
LLM_MODEL=gpt-4o-mini
CLARIFICATION_MODEL=gpt-4o

# RAG Settings
RAG_ENABLED=true

# Logging
LOG_LEVEL=INFO

# ============================================
# Text-to-SQL Mode (Experimental)
# ============================================
# true: AI가 직접 SQL 생성 후 읽기 전용 DB에서 실행
# false: 기존 QueryPlan 기반 Core API 호출 (기본값)
SQL_ENABLE_TEXT_TO_SQL=false

# 쿼리 실행 타임아웃 (초)
SQL_QUERY_TIMEOUT_SECONDS=30

# 최대 반환 행 수
SQL_MAX_ROWS=1000
